@model IEnumerable<HospitalApp.Models.Client>

<h1>Client List</h1>
<a asp-action="Create" class="btn btn-primary">Add New Client</a>
<table class="table">
    <thead>
        <tr>
            <th>Personal Number</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Surgery Date</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.PersonalNumber</td>
                <td>@client.FirstName</td>
                <td>@client.LastName</td>
                <td>@client.SurgeryDate.ToShortDateString()</td>
                <td>@client.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@client.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
