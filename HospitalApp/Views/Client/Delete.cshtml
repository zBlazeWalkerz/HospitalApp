@model HospitalApp.Models.Client

<h1 class="text-center text-danger mb-4">Delete Client</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="shadow p-4 rounded bg-light">
                <div class="alert alert-danger">
                    <p class="mb-4 text-center fw-bold">Are you sure you want to delete this client?</p>
                </div>

                <h4 class="text-dark fw-bold">Client Details</h4>
                <dl class="row">
                    <dt class="col-sm-4 text-dark fw-bold">Personal Number</dt>
                    <dd class="col-sm-8">@Model.PersonalNumber</dd>

                    <dt class="col-sm-4 text-dark fw-bold">First Name</dt>
                    <dd class="col-sm-8">@Model.FirstName</dd>

                    <dt class="col-sm-4 text-dark fw-bold">Last Name</dt>
                    <dd class="col-sm-8">@Model.LastName</dd>

                    <dt class="col-sm-4 text-dark fw-bold">Surgery Date</dt>
                    <dd class="col-sm-8">@Model.SurgeryDate.ToShortDateString()</dd>

                    <dt class="col-sm-4 text-dark fw-bold">Phone Number</dt>
                    <dd class="col-sm-8">@Model.PhoneNumber</dd>
                </dl>

                <form asp-action="DeleteConfirmed" asp-controller="Client" method="post" class="mt-4">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="List" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
